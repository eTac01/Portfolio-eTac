    background-color: rgba(15, 23, 42, 0.5);
}

.section-header {
    display: flex;
    align-items: center;
    margin-bottom: 3rem;
}

.section-number {
    color: var(--accent-cyan);
    font-family: monospace;
    font-size: 1.5rem;
    margin-right: 1rem;
}

.section-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--text-primary);
}

.section-line {
    flex: 1;
    height: 1px;
    background-color: var(--border-color);
    margin-left: 2rem;
}

/* Profiles */
.profile-container {
    position: relative;
    width: 12rem;
    height: 12rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.profile-blob,
.profile-blob-2 {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-purple));
    opacity: 0.3;
    animation: blob-morph 8s ease-in-out infinite;
    filter: blur(2px);
}

.profile-blob-2 {
    animation: blob-morph-2 10s ease-in-out infinite;
    background: linear-gradient(135deg, var(--accent-purple), var(--accent-cyan));
    opacity: 0.2;
}

.profile-frame {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(34, 211, 238, 0.4),
        0 0 40px rgba(34, 211, 238, 0.2);
    animation: profile-glow 3s ease-in-out infinite;
    z-index: 2;
}

.profile-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Cards */
.card {
    background-color: transparent;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.card-hover:hover,
.project-card:hover {
    transform: scale(1.02);
}

.card-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.card-desc {
    color: var(--text-secondary);
    font-size: 0.875rem;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
}

.btn-primary {
    background-color: var(--accent-cyan);
    color: var(--bg-dark);
}

.btn-primary:hover {
    background-color: #67e8f9;
    /* cyan-300 */
    transform: scale(1.05);
    box-shadow: 0 10px 15px -3px rgba(34, 211, 238, 0.5);
}

.btn-outline {
    color: var(--accent-cyan);
    background: rgba(34, 211, 238, 0.1);
}

.btn-outline:hover {
    background-color: var(--accent-cyan);
    color: var(--bg-dark);
    transform: scale(1.05);
}

.social-link {
    color: var(--text-secondary);
    transition: all 0.3s ease;
}

.social-link:hover {
    color: var(--accent-cyan);
    transform: scale(1.1);
}

.social-icon-img {
    width: 1.5rem;
    height: 1.5rem;
    object-fit: contain;
}

/* Filtering */
.filter-container {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.625rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    background-color: var(--bg-card);
    color: var(--text-slate-300);
    cursor: pointer;
    transition: all 0.3s ease;
}

.filter-btn:hover {
    color: #c084fc;
    background-color: rgba(147, 51, 234, 0.1);
    /* purple-400 */
}

.filter-btn.active {
    background-color: var(--accent-purple);
    color: white;
    border-color: var(--accent-purple);
    box-shadow: 0 10px 15px -3px rgba(147, 51, 234, 0.5);
}

/* Grid System Override */
.grid {
    display: grid;
}

@media (min-width: 768px) {
    .md-grid-cols-2 {
        grid-template-columns: repeat(2, 1fr);
    }

    .md-grid-cols-3 {
        grid-template-columns: repeat(3, 1fr);
    }

    .md-flex-row {
        flex-direction: row;
    }

    .md-justify-between {
        justify-content: space-between;
    }

    .md-text-7xl {
        font-size: 4.5rem;
    }

    .md-text-4xl {
        font-size: 2.25rem;
    }
}

/* Tech Tags */
/* Tech Tags */
.tech-tag {
    padding: 0.25rem 0.75rem;
    background-color: var(--border-color);
    color: var(--accent-cyan);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
}

/* Enhanced Pills for Skills */
.skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.tag {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(30, 41, 59, 0.5);
    /* lighter slate */
    color: var(--text-slate-300);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.tag:hover {
    background: linear-gradient(135deg, var(--accent-cyan), #06b6d4);
    color: var(--bg-dark);
    border-color: transparent;
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(34, 211, 238, 0.4);
}

.mono-tag {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-family: monospace;
}

/* Skills Progress Bars */
.skills-container {
    display: grid;
    gap: 2rem;
}

.skill-category-card {
    transition: all 0.3s ease;
}

.skill-icon-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.1), rgba(147, 51, 234, 0.1));
    border-radius: 0.75rem;
    color: var(--accent-cyan);
}

.skills-progress-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.skill-item {
    width: 100%;
}

.skill-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}

.skill-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-slate-300);
}

.skill-percentage {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--accent-cyan);
    font-family: monospace;
}

.skill-bar {
    width: 100%;
    height: 0.5rem;
    background: rgba(51, 65, 85, 0.5);
    border-radius: 9999px;
    overflow: hidden;
    position: relative;
}

.skill-progress {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-cyan), var(--accent-purple));
    border-radius: 9999px;
    width: 0;
    transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    box-shadow: 0 0 10px rgba(34, 211, 238, 0.5);
}

.skill-progress::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100%);
    }
}

.skill-progress.animated {
    width: var(--progress-width);
}

/* About Cards - Center Content */
.card-hover {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

/* Experience Alignment */
.experience-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.experience-company {
    display: flex;
    align-items: center;
    color: var(--accent-cyan);
    font-size: 1.125rem;
    font-weight: 600;
}

.experience-date {
    display: flex;
    align-items: center;
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-top: 0.5rem;
}

@media (min-width: 768px) {
    .experience-date {
        margin-top: 0;
    }
}



/* Forms */
.form-input {
    width: 100%;
    padding: 0.75rem 1rem;
    background-color: var(--bg-dark);
    border-radius: 0.5rem;
    color: var(--text-primary);
    outline: none;
    transition: border-color 0.3s;
}

/* Missing Utilities */
.projects-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.experience-list {
    list-style: none;
    padding-left: 0;
    margin-top: 1.5rem;
}

.experience-list li {
    margin-bottom: 0.75rem;
    display: flex;
    align-items: flex-start;
    color: #cbd5e1;
    /* slate-300 */
}

.bullet {
    color: var(--accent-cyan);
    margin-right: 0.75rem;
    margin-top: 0.25rem;
    line-height: 1;
}

/* Contact Section Styling */
.contact-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.contact-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: var(--bg-card);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.contact-card:hover {
    transform: translateX(5px);
}

.contact-icon-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 3rem;
    height: 3rem;
    background-color: rgba(34, 211, 238, 0.1);
    color: var(--accent-cyan);
    border-radius: 0.5rem;
}

.contact-text h4 {
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
}

.contact-text p {
    color: var(--text-primary);
    font-weight: 500;
}

.icon-md {
    width: 24px;
    height: 24px;
}

.icon-lg {
    width: 32px;
    height: 32px;
}

.icon-xl {
    width: 48px;
    height: 48px;
}

/* Effects */
.hover-glow {
    transition: all 0.3s ease;
}

.hover-glow:hover {
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.15);
    /* cyan glow */
    transform: scale(1.01);
}

/* Loader Styles */
.loader {
    position: fixed;
    inset: 0;
    background: var(--bg-dark);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.5s ease-out;
}

.loader.hidden {
    opacity: 0;
    pointer-events: none;
}

.logo-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    color: var(--accent-cyan);
    text-align: center;
}

.logo-icon-large {
    width: 64px;
    height: 64px;
}

.dots {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    gap: 0.5rem;
}

.dot {
    width: 0.75rem;
    height: 0.75rem;
    background-color: var(--accent-cyan);
    border-radius: 50%;
    animation: bounce 1s infinite;
}

.dot:nth-child(2) {
    animation-delay: 0.1s;
}

.dot:nth-child(3) {
    animation-delay: 0.2s;
}

/* Bottom Center Floating Navigation Styles */
.top-nav {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    background: transparent;
    backdrop-filter: none;
    box-shadow: none;
    transition: all 0.3s ease;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateX(-50%) translateY(0px);
    }

    50% {
        transform: translateX(-50%) translateY(-10px);
    }
}

.top-nav-container {
    padding: 1rem 2rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(20px);
    border-radius: 9999px;
    border: 1px solid rgba(34, 211, 238, 0.2);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

.nav-brand {
    display: none;
}

.brand-icon {
    width: 28px;
    height: 28px;
}

.brand-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: 0.05em;
}

.nav-links {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    align-items: center;
}

.nav-item {
    position: relative;
    padding: 0.75rem;
    color: var(--text-secondary);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    width: 44px;
    height: 44px;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(10px);
}

.nav-item i {
    width: 20px;
    height: 20px;
}

.nav-item:hover {
    color: var(--accent-cyan);
    background: rgba(34, 211, 238, 0.2);
    transform: scale(1.1);
}

.nav-item.active {
    background: rgba(147, 51, 234, 0.3);
    color: var(--accent-cyan);
}

.nav-item::after {
    content: attr(title);
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%) scale(0.9);
    background: rgba(15, 23, 42, 0.95);
    color: var(--text-primary);
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.2s ease;
}

.nav-item:hover::after {
    opacity: 1;
    transform: translateX(-50%) scale(1);
}

/* Adjust main content for left nav */
main {
    padding-top: 0;
    padding-left: 0;
}

/* Responsive Navigation */
@media (max-width: 768px) {
    .top-nav {
        bottom: 1rem;
    }

    .top-nav-container {
        padding: 0.75rem 1rem;
    }

    .nav-links {
        gap: 0.25rem;
    }

    .nav-item {
        width: 40px;
        height: 40px;
        padding: 0.5rem;
    }
}

/* Animations */
@keyframes blob-morph {

    0%,
    100% {
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        transform: rotate(0deg) scale(1);
    }

    25% {
        border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
        transform: rotate(90deg) scale(1.05);
    }

    50% {
        border-radius: 55% 45% 45% 55% / 60% 50% 50% 60%;
        transform: rotate(180deg) scale(0.95);
    }

    75% {
        border-radius: 40% 60% 50% 50% / 40% 50% 60% 50%;
        transform: rotate(270deg) scale(1.05);
    }
}

@keyframes blob-morph-2 {

    0%,
    100% {
        border-radius: 40% 60% 60% 40% / 60% 40% 60% 40%;
        transform: rotate(0deg) scale(1);
    }

    25% {
        border-radius: 60% 40% 50% 50% / 50% 50% 40% 60%;
        transform: rotate(-90deg) scale(1.05);
    }

    50% {
        border-radius: 45% 55% 60% 40% / 45% 60% 40% 55%;
        transform: rotate(-180deg) scale(0.95);
    }

    75% {
        border-radius: 50% 50% 40% 60% / 60% 40% 50% 50%;
        transform: rotate(-270deg) scale(1.05);
    }
}

@keyframes profile-glow {

    0%,
    100% {
        box-shadow: 0 25px 50px -12px rgba(34, 211, 238, 0.4),
            0 0 40px rgba(34, 211, 238, 0.2);
    }

    50% {
        box-shadow: 0 25px 50px -12px rgba(34, 211, 238, 0.6),
            0 0 60px rgba(34, 211, 238, 0.4);
    }
}

@keyframes typing-cursor {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0;
    }
}

.typing-cursor {
    display: inline-block;
    animation: typing-cursor 1s ease-in-out infinite;
    color: var(--accent-cyan);
    margin-left: 0.25rem;
}

@keyframes pulse {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: .5;
    }
}

@keyframes bounce {

    0%,
    100% {
        transform: translateY(-25%);
        animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
    }

    50% {
        transform: none;
        animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
    }
}

@keyframes slide-up {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fade-in {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.animate-slide-up {
    animation: slide-up 0.6s ease-out forwards;
}

.animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
}

.delay-100 {
    animation-delay: 100ms;
}

.delay-200 {
    animation-delay: 200ms;
}

.delay-300 {
    animation-delay: 300ms;
}

.delay-400 {
    animation-delay: 400ms;
}


/* Footer */
footer {
    background-color: var(--bg-darker);
    color: var(--text-secondary);
    padding: 2rem 0 8rem 0;
    text-align: center;
    border-top: 1px solid var(--bg-card);
}

.copyright {
    font-size: 0.75rem;
    margin-top: 0.5rem;
}
/* ========================================
   CYBERSECURITY THEME EFFECTS
   ======================================== */

/* Glitch Effect */
.glitch {
    position: relative;
    display: inline-block;
}

.glitch::before,
.glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
}

.glitch::before {
    animation: glitch-1 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
    color: var(--accent-cyan);
    z-index: -1;
    clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
}

.glitch::after {
    animation: glitch-2 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite reverse;
    color: var(--accent-red);
    z-index: -2;
    clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
}

@keyframes glitch-1 {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
}

@keyframes glitch-2 {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(2px, -2px); }
    40% { transform: translate(2px, 2px); }
    60% { transform: translate(-2px, -2px); }
    80% { transform: translate(-2px, 2px); }
}

/* Glow Effects */
.glow-cyan {
    text-shadow: 0 0 10px var(--accent-cyan),
                 0 0 20px var(--accent-cyan),
                 0 0 30px var(--accent-cyan);
}

.glow-green {
    text-shadow: 0 0 10px var(--accent-green),
                 0 0 20px var(--accent-green),
                 0 0 30px var(--accent-green);
}

.glow-red {
    text-shadow: 0 0 10px var(--accent-red),
                 0 0 20px var(--accent-red),
                 0 0 30px var(--accent-red);
}

.box-glow-cyan {
    box-shadow: 0 0 20px rgba(0, 240, 255, 0.5),
                0 0 40px rgba(0, 240, 255, 0.3),
                inset 0 0 20px rgba(0, 240, 255, 0.1);
}

.box-glow-green {
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.5),
                0 0 40px rgba(0, 255, 65, 0.3),
                inset 0 0 20px rgba(0, 255, 65, 0.1);
}

/* Data Decryption Animation */
.decrypt-fade {
    animation: decrypt 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes decrypt {
    0% {
        opacity: 0;
        filter: blur(10px);
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        filter: blur(0);
        transform: translateY(0);
    }
}

/* Terminal Blink Cursor */
.cursor-blink {
    animation: blink 1s step-end infinite;
}

@keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
}

/* Cyber Border */
.cyber-border {
    position: relative;
    border: 1px solid var(--border-color);
}

.cyber-border::before {
    content: '';
    position: absolute;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
    background: linear-gradient(45deg, var(--accent-cyan), var(--accent-green), var(--accent-cyan));
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
}

.cyber-border:hover::before {
    opacity: 0.3;
}

/* Threat Level Indicator */
.threat-indicator {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    animation: pulse-threat 2s ease-in-out infinite;
}

.threat-low {
    background: var(--accent-green);
    box-shadow: 0 0 10px var(--accent-green);
}

.threat-medium {
    background: #ffb000;
    box-shadow: 0 0 10px #ffb000;
}

.threat-high {
    background: var(--accent-red);
    box-shadow: 0 0 10px var(--accent-red);
}

@keyframes pulse-threat {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.2);
        opacity: 0.8;
    }
}

